<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Diego Nobre">

    <title>{% block title %}ImageThread!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('dist/css/all.min.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>

<!-- Navigation -->
<nav class="mynavbar navbar navbar-fixed-top" role="navigation">
    <div class="container">
        <ul class="nav navbar-nav">
            <li>
                <button id="totalNumberOfPosts" class="btn btn-primary" type="button">
                    Posts <span class="badge" id="totalNumberOfPosts_badge">{{ totalNumberOfPosts }}</span>
                </button>
            </li>
            <li>
                <a id="exportButton" href="{{ path('export_csv') }}" class="btn btn-primary" role="button">Export</a>
            </li>
            <li>
                <button id="totalNumberOfViews" class="btn btn-primary" type="button">
                    Views <span class="badge" id="totalNumberOfViews_badge">{{ totalNumberOfViews }}</span>
                </button>
            </li>
        </ul>
    </div>
    <!-- /.container -->
</nav>

<!-- Page Content -->
<div class="container">
    {% block body %}{% endblock %}
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; ImageThread {{ "now"|date('Y') }}</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>
</div>
<!-- /.container -->
{% block javascripts %}
    <script src="{{ asset('dist/js/all.min.js') }}"></script>
{% endblock %}
</body>
</html>
